{
  "name": "Arduino-Builder Chrome Extension",
  "description": "Chrome extension to flash devices from the browser",
  "version": "0.1",
  "manifest_version": 1,
  "app": {
    "background": {
      "scripts": ["background.bundle.js"]
    }
  },
  "externally_connectable": {
    "matches": ["http://127.0.0.1:*/*", "*://blokkencode.ingegno.be:*/*"]
  },
  "permissions": ["serial"],
  "icons": { "16": "favicon3.png" }
}
