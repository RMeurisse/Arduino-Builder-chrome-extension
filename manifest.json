{
  "name": "Blockly4Arduino Compiler Chrome Application",
  "description": "Chrome application to flash devices from the browser",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.bundle.js"]
    }
  },
  "externally_connectable": {
    "matches": ["http://127.0.0.1:*/*", "*://blokkencode.ingegno.be:*/*", "*://localhost:*/*"]
  },
  "permissions": ["serial"],
  "icons": { "16": "icon_16.png", "128": "icon_128.png" }
}
